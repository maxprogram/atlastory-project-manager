<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Project</th>
    <th>Status</th>
    <th>Category</th>
    <th>Due date</th>
    <th>Completed</th>
    <th>Project order</th>
    <th>Today order</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.description %></td>
    <td><%= task.project %></td>
    <td><%= task.status %></td>
    <td><%= task.category %></td>
    <td><%= task.due_date %></td>
    <td><%= task.completed %></td>
    <td><%= task.project_order %></td>
    <td><%= task.today_order %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

